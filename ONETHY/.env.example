# =================================
# ONETHY - Template de Variáveis de Ambiente
# =================================
# Copie este arquivo para .env e preencha com seus valores reais

# Configuração do Servidor
NODE_ENV=development
PORT=4000
HOST=localhost

# =================================
# BANCO DE DADOS POSTGRESQL
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=onethy
DB_USER=onethy_user
DB_PASSWORD=sua_senha_aqui
DATABASE_URL=postgresql://usuario:senha@localhost:5432/banco

# =================================
# JWT & AUTENTICAÇÃO
# =================================
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=seu_refresh_token_secret_aqui

# =================================
# EVOLUTION API (WhatsApp)
# =================================
EVOLUTION_API_URL=https://api.evolution.com.br
EVOLUTION_API_KEY=sua_evolution_api_key_aqui
EVOLUTION_INSTANCE_NAME=nome_da_sua_instancia
EVOLUTION_WEBHOOK_URL=http://localhost:4000/webhooks/whatsapp

# =================================
# MERCADO PAGO
# =================================
MERCADO_PAGO_ACCESS_TOKEN=seu_mercado_pago_access_token_aqui
MERCADO_PAGO_PUBLIC_KEY=sua_mercado_pago_public_key_aqui
MERCADO_PAGO_WEBHOOK_SECRET=seu_webhook_secret_aqui
MERCADO_PAGO_WEBHOOK_URL=http://localhost:4000/webhooks/mercadopago
MERCADO_PAGO_SUCCESS_URL=http://localhost:3000/payment/success
MERCADO_PAGO_FAILURE_URL=http://localhost:3000/payment/failure
MERCADO_PAGO_PENDING_URL=http://localhost:3000/payment/pending

# =================================
# EMAIL (para notificações)
# =================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=seu_email@gmail.com
EMAIL_SMTP_PASS=sua_senha_app_aqui
EMAIL_FROM_NAME=ONETHY Platform
EMAIL_FROM_ADDRESS=noreply@onethy.com

# =================================
# REDIS (para cache e sessões)
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# AWS S3 (para upload de arquivos)
# =================================
AWS_ACCESS_KEY_ID=sua_aws_access_key
AWS_SECRET_ACCESS_KEY=sua_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=seu-bucket-uploads

# =================================
# URLS DO FRONTEND
# =================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# CONFIGURAÇÕES DE SEGURANÇA
# =================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=seu_session_secret_aqui

# =================================
# LOGS & MONITORAMENTO
# =================================
LOG_LEVEL=debug
SENTRY_DSN=seu_sentry_dsn_aqui

# =================================
# CONFIGURAÇÕES DE PLANOS
# =================================
FREE_PLAN_MESSAGE_LIMIT=100
PRO_PLAN_MESSAGE_LIMIT=5000
ENTERPRISE_PLAN_MESSAGE_LIMIT=50000

# =================================
# CONFIGURAÇÕES DO CHATBOT
# =================================
OPENAI_API_KEY=sua_openai_api_key_aqui
CHATBOT_DEFAULT_LANGUAGE=pt-br
CHATBOT_MAX_TOKENS=500

# =================================
# CONFIGURAÇÕES DE BACKUP
# =================================
BACKUP_S3_BUCKET=seu-bucket-backups
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# =================================
# CONFIGURAÇÕES DE NOTIFICAÇÃO
# =================================
SLACK_WEBHOOK_URL=sua_slack_webhook_url
DISCORD_WEBHOOK_URL=sua_discord_webhook_url
TELEGRAM_BOT_TOKEN=seu_telegram_bot_token
TELEGRAM_CHAT_ID=seu_telegram_chat_id

# =================================
# CONFIGURAÇÕES DE ANALYTICS
# =================================
GOOGLE_ANALYTICS_ID=seu_google_analytics_id
MIXPANEL_TOKEN=seu_mixpanel_token
